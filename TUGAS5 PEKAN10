<!DOCTYPE html>
<html>
<head>
    <title>Notifikasi</title>
    <style>
        #notif {
            width: 250px;
            padding: 15px;
            background: yellow;
            display: none;
            border-radius: 5px;
            transition: 0.5s;
        }
    </style>
</head>
<body>

<button onclick="tampilNotif()">Tampilkan Notifikasi</button>

<div id="notif">selamat anda telah mendapatkan UANG SEBESAR 30 JT RUPIAH</div>

<script>
    function tampilNotif(){
        const box = document.getElementById("notif");

        box.style.display = "block";
        box.style.background = "lightgreen";
        box.style.opacity = "1";
        box.style.marginTop = "10px";

        setTimeout(function(){
            box.style.opacity = "0";
            box.style.marginTop = "-20px";
            setTimeout(()=> box.style.display="none", 500);
        }, 3000);
    }
</script>

</body>
</html>
